
@{
    ViewBag.Title = "Manage Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Orders</h2>

<div>
    <table id="OrdersTable" class="table table-hover table-sm table-dark text-dark" style="width:10%">
        <thead class="text-white">
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Shipped Date</th>
                <th>Pickup Address</th>
                <th>Shipping Address</th>
                <th>Weight</th>
                <th>Order Price</th>
                <th>Payment Status</th>
                <th>Tracking ID</th>
                <th>Order Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section scripts{
    <script>
        var popup, datatable;
        $(document).ready(function () {
            datatable = $('#OrdersTable').DataTable({
                            "ajax": {
                                "url": "/Employee/GetAllOrders",
                                "type": "GET",
                                "datatype": "json"
                            },
                            "columns": [
                                {
                                    "data": "OrderID",
                                    "width": "10px:"
                                },
                                {
                                    "data": "CustomerName",
                                    "width": "40px:"
                                },
                                { "data": "OrderDate" },
                                { "data": "ShippedDate" },
                                {
                                    "data": "PickupAddress",
                                    "width":"100px:"
                                },
                                {
                                    "data": "ShippingAddress",
                                    "width": "100px:"
                                },
                                { "data": "Weight" },
                                { "data": "OrderValue" },
                                { "data": "PaymentStatus" },
                                { "data": "TrackingID" },
                                { "data": "OrderStatus" },
                                {"data":"OrderID", "render" : function (data) {
                                    return "<button class='btn btn-primary btn-sm' onclick=PopUpForm('@Url.Action("UpdateOrders","Employee")/" + data + "')>Update</button>";
                                },
                                    "orderable": false,
                                    "searchable":false,
                                    "width": "120px"
                                }
                            ]
                        });
        });
        function PopUpForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        autoOpen: true,
                        draggable: false,
                        modal: true,
                        resizable: false,
                        title: 'Add/Edit Employee Details',
                        height: 650,
                        width: 825,
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                });
        }
        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form)
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        alert(1);
                        if (data.success) {
                            popup.dialog('close');
                        }
                        datatable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                })
            }
            return false;
        }
    </script>
}