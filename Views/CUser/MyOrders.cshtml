
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>

<table id="OrdersTable" class="table table-sm table-dark text-dark">
    <thead class="text-white">
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Shipped Date</th>
            <th>Pickup Address</th>
            <th>Shipping Address</th>
            <th>Weight</th>
            <th>Order Value</th>
            <th>Payment Status</th>
            <th>Tracking ID</th>
            <th>Order Status</th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            datatable = $('#OrdersTable').DataTable({
                            "ajax": {
                                "url": "/CUser/GetMYOrders",
                                "type": "GET",
                                "datatype": "json"
                            },
                            "columns": [
                                { "data": "OrderID" },
                                { "data": "CustomerName" },
                                { "data": "OrderDate" },
                                { "data": "ShippedDate" },
                                { "data": "PickupAddress" },
                                { "data": "ShippingAddress" },
                                { "data": "Weight" },
                                { "data": "OrderValue" },
                                { "data": "PaymentStatus" },
                                { "data": "TrackingID" },
                                { "data": "OrderStatus" },
                                {
                                    "data": "OrderID",
                                    "render": function (data) {
                                        return "<button class='btn btn-primary btn-sm' onclick=PopUpForm('@Url.Action("Track","CUser")/" + data + "')>Edit</button>";
                                    },
                                    "width":"50px",
                                }
                            ]
                        });
        });
        function PopUpForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        autoOpen: true,
                        draggable: false,
                        modal: true,
                        resizable: false,
                        title: 'Track Status',
                        autoResize: true,
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                });
        }
    </script>
}